<resources>
    <style name="Theme.Burpple" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarTheme">@style/Theme.ActionBar</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:editTextStyle">@style/EditText</item>

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <!-- No action bar -->
    <style name="Theme.Burpple.NoActionBar" parent="@style/Theme.Burpple">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="Theme.Burpple.NoActionBar.Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="EditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text_red</item>
    </style>

    <style name="Widget.Burpple.ActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@drawable/ab_background</item>
        <item name="android:displayOptions">showHome|homeAsUp</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:paddingLeft">@dimen/action_bar_default_padding_material</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>

        <!-- Support library compatibility -->
        <item name="titleTextAppearance">@style/TextAppearance.Burpple.Title</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <!--Text Appearance-->
    <style name="TextAppearance.Burpple.Title" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--End of Text Appearance styles-->

    <!--Button styles-->
    <style name="Button">
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.Transparent">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Facebook">
        <item name="android:background">@drawable/btn_fb</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">@dimen/button_big_height</item>
    </style>

    <style name="Button.Google">
        <item name="android:background">@drawable/btn_google</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">@dimen/button_big_height</item>
    </style>

    <style name="Button.Green">
        <item name="android:background">@drawable/btn_green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Green.Big">
        <item name="android:minHeight">@dimen/button_big_height</item>
    </style>
    <!--End of Button styles-->

    <!--Image styles-->
    <style name="Image">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:cropToPadding">true</item>
        <item name="android:contentDescription">@string/desc_image_view</item>
    </style>

    <style name="Image.Avatar">
        <item name="android:width">72dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <!--End of Image styles-->

    <!--Text styles-->
    <style name="Text">
        <item name="android:textSize">@dimen/font</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="Text.Overlay">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/dark_gray</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowDy">0</item>
    </style>

    <style name="Text.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Ash">
        <item name="android:textColor">@color/med_gray</item>
    </style>

    <style name="Text.Ash.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Card">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.Card.Title">
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="Text.Card.Subtitle">
        <item name="android:textColor">@color/med_gray</item>
    </style>

    <!--End of Text styles-->

    <style name="CardView">
        <item name="android:layout_margin">4dp</item>
    </style>

</resources>
